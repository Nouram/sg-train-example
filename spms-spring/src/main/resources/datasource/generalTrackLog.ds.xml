<DataSource    ID="generalTrackLog"  serverType="generic"  >
    <fields>
        <field name="id"      type="sequence" hidden="true"       primaryKey="true"/>
        <field name="operator"    type="text"     title="${generalLog.operName}"             />
        <field name="recordName"         type="text"     title="${generalLog.tableName}"          />
        <field name="actionDescription" type="text"     title="${generalLog.detail}" />
        <field name="m_GeneralOperateLogStatus"       type="enum"     title="${generalLog.operType}"    >
            <valueMap>
                <value ID="create" >${generalLog.operType.create}</value>
                <value ID="modify">${generalLog.operType.modify}</value>
                <value ID="remove">${generalLog.operType.delete}</value>
            </valueMap>
        </field>
        <field name="actionDate" type="date" title="${generalLog.actionDate}" />
        <field name="recordId" type="text" hidden="true" />
    </fields>
    
     <serverObject lookupStyle="spring" bean="simpleDataSourceService"/>
       
</DataSource>